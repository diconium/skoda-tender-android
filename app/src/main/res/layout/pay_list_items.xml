<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="18dp"
            android:text="@string/pay_to_park"
            android:lineHeight="19.26px"
            android:fontFamily="@font/skoda_next_light"
            android:textFontWeight="900"
            android:textColor="@color/white"
            android:textSize="16sp">

        </TextView>
        <TextView
            android:id="@+id/tv_pay_type_ext_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="18dp"
            android:text="@string/service_description"
            android:lineHeight="19.26px"
            android:fontFamily="@font/skoda_next_light"
            android:textFontWeight="900"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="visible"
            />
        </LinearLayout>




        <ImageView
            android:id="@+id/iv_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:layout_gravity="end"
            android:padding="18dp"
            android:src="@drawable/tb_chevron_down">

        </ImageView>

    </com.google.android.material.card.MaterialCardView>

</layout>