    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_services_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/payment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Payment Services"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="See all"
            android:textColor="#78faae"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chip_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/payment_services_layout">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <!-- Chip 1 -->
                <com.google.android.material.chip.Chip
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skoda connect services"
                    android:textColor="#c4c6c7"
                    android:textSize="14sp"
                    app:chipBackgroundColor="#303132"
                    app:chipStrokeColor="@android:color/transparent"
                    app:closeIconEnabled="false" />

                <!-- Chip 2 -->
                <com.google.android.material.chip.Chip
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Infotainment apps"
                    android:textColor="#c4c6c7"
                    android:textSize="14sp"
                    app:chipBackgroundColor="#161718"
                    app:chipStrokeColor="@android:color/transparent"
                    app:closeIconEnabled="false" />

                <!-- Chip 3 -->
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On demand services"
                    android:textColor="#c4c6c7"
                    android:textSize="14sp"
                    app:chipBackgroundColor="#161718"
                    app:chipStrokeColor="@android:color/transparent"
                    app:closeIconEnabled="false" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/chip_layout">


    </androidx.recyclerview.widget.RecyclerView>

